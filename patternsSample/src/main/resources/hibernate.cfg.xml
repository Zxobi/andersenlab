<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:mem:test;DB_CLOSE_DELAY=-1</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="com.andersenlab.patternsSample.entity.Literature"/>
        <mapping class="com.andersenlab.patternsSample.entity.Book"/>
        <mapping class="com.andersenlab.patternsSample.entity.Magazine"/>
        <mapping class="com.andersenlab.patternsSample.entity.PublishingHouse"/>
    </session-factory>
</hibernate-configuration>